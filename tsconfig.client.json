{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "esModuleInterop": false,
        "rootDir": "client",
        "module": "commonjs",
        "target": "es5",
        "allowSyntheticDefaultImports": false,
        "lib": [
            "dom",
            "es5",
            "es2015.core",
            "es2015.promise",
            "es2016.array.include",
            "es2017.string",
            "es2018.promise"
        ],
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "paths": {
            "*": ["node_modules", "client/*"]
        }
    },
    "include": ["client/**/*"],
    "exclude": ["node_modules", "client/**/*.test.tsx"]
}
