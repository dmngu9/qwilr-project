{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "lib": [
            "dom",
            "es5",
            "es6",
            "es2015.core",
            "es2015.promise",
            "es2016.array.include",
            "es2017.string",
            "es2018.promise"
        ],
        "rootDir": "server",
        "paths": {
            "*": ["node_modules", "server/*"]
        }
    },
    "include": ["server/**/*"],
    "exclude": ["node_modules", "server/**/*.test.ts"]
}
