{
    "extends": "./tsconfig.js",
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "rootDir": "server",
        "paths": {
            "*": [
                "node_modules",
                "server/*"
            ]
        }
    },
    "include": [
        "server/**/*"
    ],
    "exclude": [
        "node_modules",
        "server/**/*.test.ts"
    ]
}